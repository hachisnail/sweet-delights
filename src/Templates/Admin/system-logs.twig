{% extends "Layouts/admin.twig" %}

{% block content %}
<h2 class="text-2xl font-bold text-[#835234] mb-4">{{ title }}</h2>

<div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
    <p class="mb-4 text-gray-600">This page is only visible to the <strong>superadmin</strong>. Here are the latest mock system logs:</p>

    <!-- Log viewer -->
    <div class="font-mono text-sm bg-gray-800 text-white rounded-lg p-4 overflow-x-auto">
        {% for log in logs %}
            <div class="flex flex-col sm:flex-row gap-x-4 border-b border-gray-600 py-2 last:border-b-0">
                <span class="
                    {% if log.level == 'info' %}text-blue-300
                    {% elseif log.level == 'warn' %}text-yellow-300
                    {% elseif log.level == 'error' %}text-red-300
                    {% endif %}
                    font-bold w-16 flex-shrink-0
                ">[{{ log.level | upper }}]</span>
                <span class="text-gray-400 w-48 flex-shrink-0">{{ log.time }}</span>
                <span class="flex-1 text-gray-200">{{ log.message }}</span>
            </div>
        {% else %}
            <p class="text-gray-400">No log entries found.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}

