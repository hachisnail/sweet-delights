
{% set urls = {
  dashboard: '/app/dashboard',
  products: '/app/products',
  orders: '/app/orders',
  categories: '/app/categories',
  users_admin: '/app/users',
  manage_users: '/system/users',
  system_logs: '/system/logs'
} %}

{% set active_page = active_page|default('dashboard')|trim %}

<aside class="w-64 bg-[#835234] text-white h-screen p-4 flex flex-col sticky top-0">
  <div class="flex flex-col ">
    <div class="flex flex-col w-full min-h-32 rounded-xl bg-[#fee7b5] items-center border-b border-white/20 mb-6">
      <img src="/Assets/LogoWithName.png" alt="FlourEver Logo" class="h-32 ">
      {# <h1 class="text-2xl font-bold mb-6">FlourEver Admin</h1> #}

    </div>
    <nav class="space-y-2">
      {% if user.role in ['admin', 'superadmin'] %}
        <a href="{{ urls.dashboard }}" 
           class="block p-2 rounded {{ active_page == 'dashboard' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           Dashboard
        </a>
        <a href="{{ urls.products }}" 
           class="block p-2 rounded {{ active_page == 'products' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           Products
        </a>
        <a href="{{ urls.orders }}" 
           class="block p-2 rounded {{ active_page == 'orders' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           Orders
        </a>
        <a href="{{ urls.categories }}" 
           class="block p-2 rounded {{ active_page == 'categories' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           Categories
        </a>
      {% endif %}

      {% if user.role == 'admin' %}
        <a href="{{ urls.users_admin }}" 
           class="block p-2 rounded {{ active_page == 'users_admin' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           Users (Admin)
        </a>
      {% endif %}

      {% if user.role == 'superadmin' %}
        <a href="{{ urls.manage_users }}" 
           class="block p-2 rounded border-t border-white/20 mt-2 pt-2 {{ active_page == 'manage_users' ? 'bg-[#a0744D] font-semibold' : 'hover:bg-[#a0744D]' }}">
           Manage Users
        </a>
        <a href="{{ urls.system_logs }}" 
           class="block p-2 rounded {{ active_page == 'system_logs' ? 'bg-[#a0744D] font-semibold' : 'hover:bg-[#a0744D]' }}">
           System Logs
        </a>
      {% endif %}
    </nav>
  </div>

  <div class="mt-auto pt-4 border-t border-white/20">
    <div class="flex items-center gap-3 mb-3">
      <div class="w-10 h-10 rounded-full bg-[#a07445] flex items-center justify-center font-semibold text-white/90">
        {{ user.name|first|upper|default('A') }}
      </div>
      <div>
        <span class="block font-medium text-white">{{ user.name | default('Admin User') }}</span>
        <span class="block text-sm text-gray-200">{{ user.role | capitalize | default('User') }}</span>
      </div>
    </div>
    
    <button id="logoutButton"
        class="block w-full text-center p-2 rounded bg-red-500/80 text-white font-medium hover:bg-red-600/90 transition-colors">
        Logout
    </button>
  </div>

</aside>
