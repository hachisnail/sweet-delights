{% extends "Layouts/public.twig" %}

{% block content %}
<div class="max-w-4xl mx-auto my-10 p-6 bg-white rounded-2xl shadow-lg border border-pink-100">
    <h1 class="text-3xl font-bold text-[#835234] mb-8">{{ title }}</h1>

    <div class="space-y-6">
        {% for order in orders %}
            <div class="border border-gray-200 rounded-lg p-4 shadow-sm">
                <div class="flex flex-col sm:flex-row justify-between sm:items-center mb-2">
                    <h2 class="text-lg font-semibold text-gray-800">Order #{{ order.id }}</h2>
                    <span class="text-sm font-medium
                        {% if order.status == 'Delivered' %}text-green-600
                        {% elseif order.status == 'Shipped' %}text-blue-600
                        {% else %}text-yellow-600
                        {% endif %}
                    ">{{ order.status }}</span>
                </div>
                <div class="text-sm text-gray-500 mb-3">
                    <p>Date: {{ order.date }}</p>
                    <p>Total: <span class="font-medium text-gray-700">{{ order.total }}</span></p>
                </div>
                <p class="text-sm text-gray-700 bg-gray-50 p-2 rounded">
                    <strong>Items:</strong> {{ order.items }}
                </p>
            </div>
        {% else %}
            <p class="text-gray-500">You have not placed any orders yet.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
