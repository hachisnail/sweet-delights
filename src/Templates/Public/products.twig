{% extends "Layouts/public.twig" %}

{% block content %}
<div class="p-6 flex flex-col pt-30 snap-start">
  <h1 class="text-3xl font-bold text-pink-700 mb-6 text-center">Our Treats</h1>

  <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {% if products is empty %}
      {# Skeleton Loader #}
      {% for i in 1..6 %}
      <div class="bg-white p-4 rounded-2xl shadow text-center animate-pulse">
        <div class="h-40 bg-gray-200 rounded-xl mb-3"></div>
        <div class="h-5 bg-gray-200 rounded w-3/4 mx-auto mb-2"></div>
        <div class="h-4 bg-gray-200 rounded w-1/2 mx-auto"></div>
      </div>
      {% endfor %}
    {% else %}
      {% for product in products %}
      <a href="{{app.url}}/products/{{ product.id }}">
        <div class="bg-white p-4 rounded-2xl shadow text-center">
          <img src="{{ product.image }}" alt="{{ product.name }}" class="rounded-xl mb-3">
          <h2 class="font-semibold text-lg">{{ product.name }}</h2>
          <p class="text-gray-500">â‚±{{ product.price }}</p>
        </div>
      </a>
      {% endfor %}
    {% endif %}
  </div>
</div>
{% endblock %}
