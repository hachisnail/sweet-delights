{% extends "Layouts/admin.twig" %}

{% block content %}
<div class="max-w-7xl mx-auto">
  <div class="flex flex-col md:flex-row justify-between md:items-center gap-4 mb-4">
    <h2 class="text-2xl font-bold text-[#835234]">{{ title }}</h2>
  </div>

  <div class="bg-white p-4 rounded-lg shadow-md shadow-gray-400 border border-gray-200 mb-6">
    <form method="GET" action="{{ app_url }}/app/reports" class="flex flex-col md:flex-row items-end gap-4">
      <div>
        <label for="date_start" class="block text-sm font-medium text-gray-700">Start Date</label>
        <input type="date" name="date_start" id="date_start" value="{{ date_start }}"
               class="mt-1 block w-full md:w-64 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500 text-sm">
      </div>
      <div>
        <label for="date_end" class="block text-sm font-medium text-gray-700">End Date</label>
        <input type="date" name="date_end" id="date_end" value="{{ date_end }}"
               class="mt-1 block w-full md:w-64 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500 text-sm">
      </div>
      <div class="flex items-center gap-3">
        <button type="submit" class="w-full md:w-auto px-4 py-2 bg-[#835234] text-white text-sm font-medium rounded-md hover:bg-[#6d412a] transition">
          Generate Report
        </button>
        <a href="{{ app_url }}/app/reports/export?date_start={{ date_start }}&date_end={{ date_end }}"
           class="w-full md:w-auto px-4 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 transition">
          Export as CSV
        </a>
      </div>
    </form>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white p-6 rounded-lg shadow-md shadow-gray-400 border border-gray-200">
      <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Total Sales</h3>
      <p class="text-3xl font-bold text-pink-600 mt-2">â‚±{{ stats.total_sales|number_format(2) }}</p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md shadow-gray-400 border border-gray-200">
      <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Total Orders</h3>
      <p class="text-3xl font-bold text-[#835234] mt-2">{{ stats.total_orders }}</p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md shadow-gray-400 border border-gray-200">
      <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Total Items Sold</h3>
      <p class="text-3xl font-bold text-[#835234] mt-2">{{ stats.total_items_sold }}</p>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md shadow-gray-400 border border-gray-200 overflow-hidden">
    <h3 class="text-xl font-semibold text-[#a07445] p-6">Top 10 Best Sellers</h3>
    <div class="overflow-x-auto">
      <table class="w-full divide-y divide-gray-200 min-w-max">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rank</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Name</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity Sold</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {% for item in best_sellers %}
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">{{ loop.index }}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-pink-600 font-medium">{{ item.name }}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 text-right font-medium">{{ item.quantity }}</td>
            </tr>
          {% else %}
            <tr>
              <td colspan="3" class="px-6 py-10 text-center text-gray-500">
                No sales data found for this period.
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}