{# FILE: Views/Admin/settings.twig #}

{% extends "Layouts/admin.twig" %}

{% block content %}
<div class="max-w-2xl mx-auto">
  <div class="flex flex-col md:flex-row justify-between md:items-center gap-4 mb-4">
    <h2 class="text-2xl font-bold text-[#835234]">{{ title }}</h2>
  </div>

  {% if success %}
    <div class="mb-6 p-4 rounded-lg bg-green-100 text-green-800 border border-green-200">
      Settings saved successfully.
    </div>
  {% endif %}

  <div class="bg-white p-6 rounded-lg shadow-md shadow-gray-400 border border-gray-200">
    <form method="POST" action="{{ form_action }}" class="space-y-6">
      
      <div>
        <label for="tax_rate" class="block text-sm font-medium text-gray-700">Tax Rate</label>
        <div class="mt-1 relative rounded-md shadow-sm">
          <input 
            type="number" 
            name="tax_rate" 
            id="tax_rate" 
            value="{{ config.tax_rate }}" 
            step="0.01" 
            min="0"
            class="block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm"
            placeholder="0.12">
        </div>
        <p class="mt-2 text-xs text-gray-500">
          Enter as a decimal. For example, `0.12` for 12% or `0.05` for 5%.
        </p>
      </div>

      <div>
        <label for="shipping_fee" class="block text-sm font-medium text-gray-700">Flat-Rate Shipping Fee</label>
        <div class="mt-1 relative rounded-md shadow-sm">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <span class="text-gray-500 sm:text-sm">â‚±</span>
          </div>
          <input 
            type="number" 
            name="shipping_fee" 
            id="shipping_fee" 
            value="{{ config.shipping_fee }}"
            step="0.01"
            min="0"
            class="block w-full pl-7 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-pink-500 focus:border-pink-500 sm:text-sm" 
            placeholder="50.00">
        </div>
        <p class="mt-2 text-xs text-gray-500">
          Enter a flat fee to be applied to all orders.
        </p>
      </div>

      <div class="border-t border-gray-200 pt-5">
        <button type="submit" class="w-full md:w-auto px-6 py-2 bg-pink-600 text-white font-semibold rounded-xl hover:bg-pink-700 transition">
          Save Settings
        </button>
      </div>

    </form>
  </div>
</div>
{% endblock %}