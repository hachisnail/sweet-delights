{% extends "Layouts/admin.twig" %}

{% block content %}
<div class="max-w-4xl mx-auto">
  <div class="mb-4">
    {# Breadcrumbs #}
    <a href="{{ url_for('system.logs.index') }}" class="text-pink-600 hover:text-pink-800">&larr; Back to System Logs</a>
  </div>

  <div class="flex flex-col md:flex-row justify-between md:items-center gap-4 mb-4">
    <h2 class="text-2xl font-bold text-[#835234]">Log Details</h2>
  </div>

  {# Log Summary Card #}
  <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200 mb-6 space-y-4">
    <div>
      <span class="text-sm font-medium text-gray-500">Timestamp</span>
      <p class="text-lg text-gray-900">{{ log.timestamp|date('M d, Y @ h:i A') }}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <span class="text-sm font-medium text-gray-500">Actor</span>
        <p class="text-lg font-medium text-pink-600">{{ log.actor_name }}</p>
      </div>
      <div>
        <span class="text-sm font-medium text-gray-500">Action</span>
        <p class="text-lg">
          <span class="px-3 py-1 rounded-full text-sm font-medium uppercase
            {% if log.action_type == 'delete' %} bg-red-100 text-red-800
            {% elseif log.action_type == 'update' %} bg-blue-100 text-blue-800
            {% elseif log.action_type == 'create' %} bg-green-100 text-green-800
            {% else %} bg-gray-100 text-gray-800
            {% endif %}
          ">
            {{ log.action_type }}
          </span>
        </p>
      </div>
      <div>
        <span class="text-sm font-medium text-gray-500">Target</span>
        <p class="text-lg text-gray-900">{{ log.target_type }} (ID: {{ log.target_id }})</p>
      </div>
    </div>
  </div>

  {# --- DYNAMIC DETAILS SECTION --- #}
  {% if log.details.before or log.details.after %}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

      {# --- BEFORE STATE --- #}
      <div class="bg-white rounded-lg shadow-md border border-gray-200">
        <h3 class="text-lg font-bold text-red-700 p-4 border-b border-gray-200">Before State</h3>
        <div class="p-4">
          {% if log.target_type == 'user' %}
              {% include 'Admin/LogPartials/_user.twig' with { data: log.details.before, beforeData: {}, isAfterState: false } %}
          {% elseif log.target_type == 'product' %}
              {% include 'Admin/LogPartials/_product.twig' with { data: log.details.before, beforeData: {}, isAfterState: false } %}
          {% elseif log.target_type == 'category' %}
              {% include 'Admin/LogPartials/_category.twig' with { data: log.details.before, beforeData: {}, isAfterState: false } %}
          {% elseif log.target_type == 'order' %}
              {% include 'Admin/LogPartials/_order.twig' with { data: log.details.before, beforeData: {}, isAfterState: false } %}
          {% elseif log.target_type == 'settings' %}
              {% include 'Admin/LogPartials/_settings.twig' with { data: log.details.before, beforeData: {}, isAfterState: false } %}
          {% else %}
              {% include 'Admin/LogPartials/_default.twig' with { data: log.details.before, beforeData: {}, isAfterState: false } %}
          {% endif %}
        </div>
      </div>

      {# --- AFTER STATE --- #}
      <div class="bg-white rounded-lg shadow-md border border-gray-200">
        <h3 class="text-lg font-bold text-green-700 p-4 border-b border-gray-200">After State</h3>
        <div class="p-4">
          {% if log.target_type == 'user' %}
              {% include 'Admin/LogPartials/_user.twig' with { data: log.details.after, beforeData: log.details.before, isAfterState: true } %}
          {% elseif log.target_type == 'product' %}
              {% include 'Admin/LogPartials/_product.twig' with { data: log.details.after, beforeData: log.details.before, isAfterState: true } %}
          {% elseif log.target_type == 'category' %}
              {% include 'Admin/LogPartials/_category.twig' with { data: log.details.after, beforeData: log.details.before, isAfterState: true } %}
          {% elseif log.target_type == 'order' %}
              {% include 'Admin/LogPartials/_order.twig' with { data: log.details.after, beforeData: log.details.before, isAfterState: true } %}
          {% elseif log.target_type == 'settings' %}
              {% include 'Admin/LogPartials/_settings.twig' with { data: log.details.after, beforeData: log.details.before, isAfterState: true } %}
          {% else %}
              {% include 'Admin/LogPartials/_default.twig' with { data: log.details.after, beforeData: log.details.before, isAfterState: true } %}
          {% endif %}
        </div>
      </div>

    </div>

  {# --- NON-STANDARD LOG STRUCTURE --- #}
  {% elseif log.details is not empty %}
    <div class="bg-white rounded-lg shadow-md border border-gray-200">
      <h3 class="text-lg font-bold text-gray-700 p-4 border-b border-gray-200">Log Details</h3>
      <div class="p-4">
        {% include 'Admin/LogPartials/_default.twig' with { data: log.details, beforeData: {}, isAfterState: false } %}
      </div>
    </div>

  {# --- EMPTY DETAILS --- #}
  {% else %}
    <div class="bg-white rounded-lg shadow-md border border-gray-200">
      <h3 class="text-lg font-bold text-gray-700 p-4 border-b border-gray-200">Log Details</h3>
      <div class="p-4">
        <p class="p-4 text-gray-500">No additional details were recorded for this log entry.</p>
      </div>
    </div>
  {% endif %}
</div>
{% endblock %}
