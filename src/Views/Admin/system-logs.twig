{% extends "Layouts/admin.twig" %}

{% block content %}
<div class="max-w-4xl mx-auto">
  <div class="flex flex-col md:flex-row justify-between md:items-center gap-4 mb-4">
    <h2 class="text-2xl font-bold text-[#835234]">{{ title }}</h2>
  </div>

  <div class="bg-white rounded-lg shadow-md shadow-gray-400 border border-gray-200 overflow-hidden">
    <div class="p-4">
      <p class="text-sm text-gray-600">This page displays mock system logs.</p>
    </div>
    <div class="border-t border-gray-200">
      {% for log in logs|reverse %}
        <div class="p-4 {{ not loop.last ? 'border-b border-gray-100' : '' }} flex items-start gap-3">
          <span class="font-mono text-xs text-gray-400 mt-1">{{ log.timestamp|date('Y-m-d H:i:s') }}</span>
          <span class="px-2 py-0.5 rounded-full text-xs font-medium
            {% if log.level == 'ERROR' %} bg-red-100 text-red-800
            {% elseif log.level == 'INFO' %} bg-blue-100 text-blue-800
            {% else %} bg-gray-100 text-gray-800
            {% endif %}
          ">{{ log.level }}</span>
          <p class="font-mono text-sm text-gray-700">{{ log.message }}</p>
        </div>
      {% else %}
        <div class="p-6 text-center text-gray-500">
          No log entries found.
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}