{% extends "Layouts/admin.twig" %}

{% block content %}
<div class="max-w-7xl mx-auto">
  <div class="flex flex-col md:flex-row justify-between md:items-center gap-4 mb-4">
    <h2 class="text-2xl font-bold text-[#835234]">{{ title }}</h2>
  </div>

  {# --- FILTER BAR (Unchanged) --- #}
  <div class="bg-white p-4 rounded-lg shadow-md shadow-gray-400 border border-gray-200 mb-6">
    <form method="GET" action="{{ url_for('system.logs.index') }}" class="flex flex-col md:flex-row md:items-end gap-4">
      
      {# Actor Name Search #}
      <div class="w-full md:w-64">
        <label for="actor" class="block text-sm font-medium text-gray-700">Filter by Actor</label>
        <input type="text" name="actor" id="actor" value="{{ current_filters.actor | default('') }}"
               class="mt-1 block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500 text-sm"
               placeholder="e.g., John Doe or email">
      </div>

      {# Action Type Filter #}
      <div class="w-full md:w-48">
        <label for="action" class="block text-sm font-medium text-gray-700">Filter by Action</label>
        <select name="action" id="action" class="mt-1 block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500 text-sm">
          <option value="">All Actions</option>
          <option value="create" {{ current_filters.action == 'create' ? 'selected' : '' }}>Create</option>
          <option value="update" {{ current_filters.action == 'update' ? 'selected' : '' }}>Update</option>
          <option value="delete" {{ current_filters.action == 'delete' ? 'selected' : '' }}>Delete</option>
          <option value="login" {{ current_filters.action == 'login' ? 'selected' : '' }}>Login</option>
          <option value="export" {{ current_filters.action == 'export' ? 'selected' : '' }}>Export</option>
        </select>
      </div>

      {# Target Type Filter #}
      <div class="w-full md:w-48">
        <label for="target" class="block text-sm font-medium text-gray-700">Filter by Target</label>
        <select name="target" id="target" class="mt-1 block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-pink-500 focus:border-pink-500 text-sm">
          <option value="">All Targets</option>
          <option value="user" {{ current_filters.target == 'user' ? 'selected' : '' }}>User</option>
          <option value="product" {{ current_filters.target == 'product' ? 'selected' : '' }}>Product</option>
          <option value="category" {{ current_filters.target == 'category' ? 'selected' : '' }}>Category</option>
          <option value="order" {{ current_filters.target == 'order' ? 'selected' : '' }}>Order</option>
          <option value="settings" {{ current_filters.target == 'settings' ? 'selected' : '' }}>Settings</option>
          <option value="report" {{ current_filters.target == 'report' ? 'selected' : '' }}>Report</option>
        </select>
      </div>
      
      {# Button group #}
      <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
        <button type="submit" class="w-full sm:w-auto px-4 py-2 bg-[#835234] text-white text-sm font-medium rounded-md hover:bg-[#6d412a] transition">
          Filter
        </button>
        <a href="{{ url_for('system.logs.index') }}" class="w-full sm:w-auto px-4 py-2 bg-gray-200 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-300 transition text-center">
          Clear
        </a>
      </div>
    </form>
  </div>
  {# --- END: FILTER BAR --- #}


  <div class="bg-white rounded-lg shadow-md shadow-gray-400 border border-gray-200 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actor</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Target</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Details</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          
          {% for log in logs %}
            <tr>
              {# Timestamp Cell #}
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900" title="{{ log.timestamp|date('Y-m-d H:i:s') }}">{{ log.timestamp|date('M d, Y') }}</div>
                <div class="text-xs text-gray-500">{{ log.timestamp|date('h:i A') }}</div>
              </td>
              
              {# Actor Cell #}
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-pink-600">{{ log.actor_name }}</div>
              </td>
              
              {# Action Cell #}
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-0.5 inline-flex text-xs leading-5 font-semibold rounded-full uppercase
                  {% if log.action_type == 'delete' %} bg-red-100 text-red-800
                  {% elseif log.action_type == 'update' %} bg-blue-100 text-blue-800
                  {% elseif log.action_type == 'create' %} bg-green-100 text-green-800
                  {% elseif log.action_type == 'export' %} bg-purple-100 text-purple-800
                  {% else %} bg-gray-100 text-gray-800
                  {% endif %}
                ">{{ log.action_type }}</span>
              </td>
              
              {# Target Cell #}
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">{{ log.target_type }}</div>
                {% if log.target_id %}
                  <div class="text-xs text-gray-500">ID: {{ log.target_id }}</div>
                {% endif %}
              </td>
              
              {# --- UPDATED Details Cell --- #}
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                {# Check if the details array is not empty #}
                {% if log.details is not empty %}
                  <a href="{{ url_for('system.logs.details', {'id': log.id}) }}" class="text-pink-600 hover:text-pink-900">
                    {# Show "View Changes" if it's a diff, otherwise "View Details" #}
                    {% if log.details.before or log.details.after %}
                      View Changes
                    {% else %}
                      View Details
                    {% endif %}
                  </a>
                {% else %}
                  <span class="text-gray-400">N/A</span>
                {% endif %}
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="p-6 text-center text-gray-500">
                No log entries found matching your criteria.
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    {# --- NEW: PAGINATION CONTROLS --- #}
    {% if totalPages > 1 %}
    <div class="p-4 border-t border-gray-200 flex flex-col sm:flex-row justify-between items-center gap-3">
      
      {# "Previous" Link #}
      {% if currentPage > 1 %}
        {% set prevPage = currentPage - 1 %}
        <a href="{{ url_for('system.logs.index') }}?{{ current_filters|merge({'page': prevPage})|url_encode }}"
           class="w-full sm:w-auto px-4 py-2 bg-white text-[#835234] border border-[#835234] text-sm font-medium rounded-md hover:bg-gray-50 transition text-center">
          &larr; Previous
        </a>
      {% else %}
        <span class="w-full sm:w-auto px-4 py-2 bg-gray-100 text-gray-400 border border-gray-200 text-sm font-medium rounded-md text-center cursor-not-allowed">
          &larr; Previous
        </span>
      {% endif %}

      {# Page X of Y #}
      <div class="text-sm text-gray-600">
        Page {{ currentPage }} of {{ totalPages }} ({{ totalLogs }} total logs)
      </div>

      {# "Next" Link #}
      {% if currentPage < totalPages %}
        {% set nextPage = currentPage + 1 %}
        <a href="{{ url_for('system.logs.index') }}?{{ current_filters|merge({'page': nextPage})|url_encode }}"
           class="w-full sm:w-auto px-4 py-2 bg-white text-[#835234] border border-[#835234] text-sm font-medium rounded-md hover:bg-gray-50 transition text-center">
          Next &rarr;
        </a>
      {% else %}
        <span class="w-full sm:w-auto px-4 py-2 bg-gray-100 text-gray-400 border border-gray-200 text-sm font-medium rounded-md text-center cursor-not-allowed">
          Next &rarr;
        </span>
      {% endif %}
      
    </div>
    {% endif %}
    {# --- END: PAGINATION CONTROLS --- #}
    
  </div>
</div>
{% endblock %}