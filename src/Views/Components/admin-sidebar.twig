{% set urls = {
 dashboard: '/app/dashboard',
 products: '/app/products',
 orders: '/app/orders',
 categories: '/app/categories',
 users_admin: '/app/users',
 settings: '/app/settings',
 reports: '/app/reports',
 manage_users: '/system/users',
 system_logs: '/system/logs'
} %}

{% set active_page = active_page|default('dashboard')|trim %}

<aside class="w-64 bg-[#835234] text-white h-screen p-4 flex flex-col sticky top-0">
 <div class="flex flex-col ">
  <div class="flex flex-col w-full min-h-32 rounded-xl bg-[#fee7b5] items-center border-b border-white/20 mb-6">
   <img src="/Assets/LogoWithName.png" alt="FlourEver Logo" class="h-32 ">
  </div>
    
    <nav class="space-y-2">
      {% if user.role in ['admin', 'superadmin'] %}
        {# --- Dashboard --- #}
        <a href="{{ urls.dashboard }}" 
           class="flex items-center gap-3 p-2 rounded {{ active_page == 'dashboard' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><rect x="3" y="3" width="7" height="7"></rect><rect x="14" y="3" width="7" height="7"></rect><rect x="14" y="14" width="7" height="7"></rect><rect x="3" y="14" width="7" height="7"></rect></svg>
           <span>Dashboard</span>
        </a>
        {# --- Orders --- #}
        <a href="{{ urls.orders }}" 
           class="flex items-center gap-3 p-2 rounded {{ active_page == 'orders' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><circle cx="8" cy="21" r="1"></circle><circle cx="19" cy="21" r="1"></circle><path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"></path></svg>
           <span>Orders</span>
        </a>
        {# --- Products --- #}
        <a href="{{ urls.products }}" 
           class="flex items-center gap-3 p-2 rounded {{ active_page == 'products' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
           <span>Products</span>
        </a>
        {# --- Categories --- #}
        <a href="{{ urls.categories }}" 
           class="flex items-center gap-3 p-2 rounded {{ active_page == 'categories' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><rect x="3" y="3" width="7" height="7" rx="1"></rect><rect x="14" y="3" width="7" height="7" rx="1"></rect><rect x="14" y="14" width="7" height="7" rx="1"></rect><rect x="3" y="14" width="7" height="7" rx="1"></rect></svg>
           <span>Categories</span>
        </a>
        {# --- Users (Admin) --- #}
        <a href="{{ urls.users_admin }}" 
           class="flex items-center gap-3 p-2 rounded {{ active_page == 'users' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
           <span>Users (Admin)</span>
        </a>
        {# --- Reports --- #}
        <a href="{{ urls.reports }}" 
           class="flex items-center gap-3 p-2 rounded {{ active_page == 'reports' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><line x1="12" x2="12" y1="20" y2="10"></line><line x1="18" x2="18" y1="20" y2="4"></line><line x1="6" x2="6" y1="20" y2="16"></line></svg>
           <span>Reports</span>
        </a>
        {# --- Settings --- #}
        <a href="{{ urls.settings }}" 
           class="flex items-center gap-3 p-2 rounded {{ active_page == 'settings' ? 'bg-[#a07445] font-semibold' : 'hover:bg-[#a07445]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1-1-1.72v-.51a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path><circle cx="12" cy="12" r="3"></circle></svg>
           <span>Settings</span>
        </a>
      {% endif %}

      {% if user.role == 'superadmin' %}
        {# --- Manage Users (Superadmin) --- #}
        <a href="{{ urls.manage_users }}" 
           class="flex items-center gap-3 p-2 rounded border-t border-white/20 mt-2 pt-2 {{ active_page == 'system_users' ? 'bg-[#a0744D] font-semibold' : 'hover:bg-[#a0744D]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
           <span>Manage Users</span>
        </a>
        {# --- System Logs (Superadmin) --- #}
        <a href="{{ urls.system_logs }}" 
           class="flex items-center gap-3 p-2 rounded {{ active_page == 'system_logs' ? 'bg-[#a0744D] font-semibold' : 'hover:bg-[#a0744D]' }}">
           <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 w-5 h-5"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><line x1="10" y1="9" x2="8" y2="9"></line></svg>
           <span>System Logs</span>
        </a>
      {% endif %}
    </nav>
 </div>

 <div class="mt-auto pt-4 border-t border-white/20">
  <div class="flex items-center gap-3 mb-3">
   <div class="w-10 h-10 rounded-full bg-[#a07445] flex items-center justify-center font-semibold text-white/90">
    {{ user.first_name|first|upper|default('A') }} {# <-- Changed to use first_name #}
   </div>
   <div>
    <span class="block font-medium text-white">{{ user.first_name | default('Admin') }} {{ user.last_name | default('User') }}</span> {# <-- Changed to use first_name/last_name #}
    <span class="block text-sm text-gray-200">{{ user.role | capitalize | default('User') }}</span>
   </div>
  </div>
  
  <button id="logoutButton"
    class="block w-full text-center p-2 rounded bg-red-500/80 text-white font-medium hover:bg-red-600/90 transition-colors">
    Logout
  </button>
 </div>

</aside>