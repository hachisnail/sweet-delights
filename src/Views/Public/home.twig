    </div>
  </div>
</section>


{# --- DISCOUNT POPUP --- #}

<div id="modalOverlay" class="fixed inset-0 bg-black/40 z-40 hidden" aria-hidden="true"></div>

<div id="discountModal" 
     class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-white rounded-2xl shadow-2xl z-50 w-full max-w-lg overflow-hidden hidden transform transition-all">
    
    <div class="relative">
        <button id="closeModalBtn" class="absolute top-4 right-4 text-gray-400 hover:text-gray-700 z-10">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 6 6 18"/><path d="m6 6 12 12"/>
            </svg>
        </button>

        <div class="flex flex-col items-center p-8 pt-12">
            <h2 class="text-3xl font-bold font-zen-antique text-[#A96B44] mb-6">
                Sweet Deals Inside!
            </h2>
            
            {% if active_discounts is not empty %}
                <div class="swiper modalDiscountSwiper w-full">
                    <div class="swiper-wrapper">
                        {% for discount in active_discounts %}
                            <div class="swiper-slide h-auto pb-10"> {# pb-10 to make room for pagination #}
                                {{ _self.renderDiscountCard(discount) }} {# Re-using your macro #}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="swiper-pagination modal-swiper-pagination mt-6 relative"></div>
                </div>
            {% else %}
                <img src="/Assets/BobaTea.svg" alt="Special Offer" class="w-24 h-24 mb-4">
                <p class="text-lg text-gray-600 text-center mb-6">
                    No active deals right now, but our treats are always fresh!
                </p>
                <a href="/products"
                   class="w-full text-center bg-[#A96B44] shadow-md shadow-[#8c8989]/50 text-white px-6 py-3 rounded-full font-semibold hover:scale-105 transition-transform">
                    Find Your Treat
                </a>
            {% endif %}

            <div class="mt-6 flex items-center">
                <input type="checkbox" id="dontShowAgain" class="w-4 h-4 text-[#A96B44] border-gray-300 rounded focus:ring-[#A96B44]">
                <label for="dontShowAgain" class="ml-2 block text-sm text-gray-700">
                    Don't show this again for 12 hours
                </label>
            </div>
        </div>
        </div>
</div>
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        
        // --- Modal & Popup Logic ---
        const modal = document.getElementById('discountModal');
        const overlay = document.getElementById('modalOverlay');
        const closeButton = document.getElementById('closeModalBtn');
        const dontShowCheckbox = document.getElementById('dontShowAgain');
        
        const storageKey = 'hideDiscountPopupTimestamp';
        const twelveHoursInMs = 12 * 60 * 60 * 1000;
        
        let modalSwiper = null; // Variable to hold the modal swiper instance

        const showModal = () => {
            modal.classList.remove('hidden');
            overlay.classList.remove('hidden');
            
            // --- NEW: Initialize modal swiper ---
            // We do this here because Swiper needs the element to be visible
            // We check !modalSwiper to ensure it only initializes ONCE.
            if (!modalSwiper && {{ active_discounts | length > 0 }}) { 
                modalSwiper = new Swiper(".modalDiscountSwiper", {
                    slidesPerView: 1,
                    spaceBetween: 10,
                    pagination: {
                        el: ".modal-swiper-pagination", // Use the unique class
                        clickable: true,
                    },
                    autoplay: {
                        delay: 3000,
                        disableOnInteraction: false,
                    },
                    loop: {{ (active_discounts | length > 1) ? 'true' : 'false' }} // Loop if more than 1
                });
            }
        };

        const hideModal = () => {
            modal.classList.add('hidden');
            overlay.classList.add('hidden');
            
            // Stop autoplay when modal is hidden (good practice)
            if (modalSwiper && modalSwiper.autoplay) {
                 modalSwiper.autoplay.stop();
            }
            
            if (dontShowCheckbox.checked) {
                const hideUntil = Date.now() + twelveHoursInMs;
                localStorage.setItem(storageKey, hideUntil.toString());
            }
        };

        // Check if we should show the modal on page load
        const hideUntilTimestamp = localStorage.getItem(storageKey);
        
        if (!hideUntilTimestamp || Date.now() > parseInt(hideUntilTimestamp, 10)) {
            setTimeout(showModal, 500); 
        }

        // Add event listeners
        closeButton.addEventListener('click', hideModal);
        overlay.addEventListener('click', hideModal);

        
        // --- Initialize Swiper for MAIN PAGE Discount Carousel ---
        // (This one runs on page load as before)
        new Swiper(".discountSwiper", {
            slidesPerView: 1,
            spaceBetween: 10,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            breakpoints: {
                640: {
                    slidesPerView: 2,
                    spaceBetween: 20,
                },
                1024: {
                    slidesPerView: 4,
                    spaceBetween: 30,
                },
            },
            autoplay: {
                delay: 4000,
                disableOnInteraction: false,
            },
            loop: {{ (active_discounts | length > 4) ? 'true' : 'false' }}
        });
    });
</script>


{% endblock %}