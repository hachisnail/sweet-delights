{% extends "Layouts/public.twig" %}

{# --- NEW: Macro to render a single discount card --- #}
{% macro renderDiscountCard(discount) %}
    
    {# 1. Determine the correct URL #}
    {% set url = discount.discount_scope == 'product' ? '/products/' ~ discount.item_sku : '/products?category=' ~ discount.item_sku %}
    
    {# 2. Determine the correct image path #}
    {% set image_src = '/Assets/placeholder-item.png' %} {# Default #}
    
    {% if discount.discount_scope == 'product' and discount.item_image %}
        {# Product images are typically stored with their full relative path #}
        {% set image_src = discount.item_image %}
    {% elseif discount.discount_scope == 'category' %}
        {# Category images follow the logic from your category grid #}
        {% set image_src = discount.item_image ? '/Assets/Categories/' ~ discount.item_image : '/Assets/Categories/' ~ discount.item_sku ~ '.png' %}
    {% endif %}

    {# 3. Render the card #}
    <a href="{{ url }}" class="block bg-white rounded-lg shadow-md overflow-hidden group h-full">
        <div class="relative h-48">
            <img src="{{ image_src }}" alt="{{ discount.item_name }}" 
                 class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" 
                 onerror="this.onerror=null; this.src='/Assets/placeholder-item.png';">
            
            <span class="absolute top-2 right-2 bg-red-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow">
                {% if discount.discount_type == 'percent' %}
                    {{ discount.discount_value | number_format(0) }}% OFF
                {% else %}
                    â‚±{{ discount.discount_value | number_format(2) }} OFF
                {% endif %}
            </span>
        </div>
        <div class="p-4">
            <p class="text-sm text-gray-500 capitalize">{{ discount.discount_scope }} Offer</p>
            <h3 class="text-lg font-semibold text-[#835234] truncate group-hover:underline">{{ discount.item_name }}</h3>
            <p class="text-xs text-gray-400 mt-2">
                {% if discount.end_date %}
                    Ends: {{ discount.end_date | date('M d, Y') }}
                {% else %}
                    Ongoing Deal
                {% endif %}
            </p>
        </div>
    </a>
{% endmacro %}


{% block content %}

