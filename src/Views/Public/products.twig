{% extends "Layouts/public.twig" %}

{% block content %}

{# --- NEW: ACTIVE DISCOUNTS BANNER --- #}
{% if active_discounts is defined and active_discounts|length > 0 %}
<section class="w-full pt-32 pb-10 bg-[#FFF8F2] snap-start">
    <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-zen-antique text-[#A96B44] mb-4 text-center">Current Offers</h2>
        <div class="flex gap-4 overflow-x-auto pb-4 px-4">
        
            {% for discount in active_discounts %}
                {# --- DEFINE VARS based on scope --- #}
                {% set item_name = discount.item_name %}
                {% set item_image = discount.item_image %}
                {% set item_link = "" %}

                {% if discount.discount_scope == 'product' %}
                    {% set item_link = app_url ~ '/products/' ~ discount.item_sku %}
                {% else %}
                    {# Category discount #}
                    {% set item_link = app_url ~ '/products?category=' ~ discount.item_sku %}
                    {% if item_image %}
                        {# Prepend the asset path for category images #}
                        {% set item_image = '/Assets/Categories/' ~ item_image %}
                    {% endif %}
                {% endif %}
                {# --- END DEFINE VARS --- #}

                <a href="{{ item_link }}" 
                   class="flex-shrink-0 w-64 bg-white rounded-xl shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1 border border-[#EADBCB] overflow-hidden group">
                    
                    <div class="relative w-full h-32 bg-gray-50">
                        <img src="{{ item_image }}" alt="{{ item_name }}"
                             class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
                             onerror="this.onerror=null; this.src='/Assets/placeholder-item.png';">
                        
                        {# --- Add a tag to show what kind of sale it is --- #}
                        <span class="absolute top-2 right-2 px-2 py-0.5 rounded-full text-xs font-semibold
                            {% if discount.discount_scope == 'product' %} bg-blue-100 text-blue-800 {% else %} bg-green-100 text-green-800 {% endif %}">
                            {{ discount.discount_scope|capitalize }} Sale
                        </span>
                    </div>
                    
                    <div class="p-3">
                        <h3 class="font-semibold text-md text-[#835234] truncate">{{ item_name }}</h3>
                        <span class="block text-lg font-bold text-red-600">
                            {% if discount.discount_type == 'percent' %}
                                {{ discount.discount_value|number_format(0) }}% OFF
                            {% else %}
                                ₱{{ discount.discount_value|number_format(2) }} OFF
                            {% endif %}
                        </span>
                        {% if discount.end_date %}
                            <p class="text-xs text-gray-500">Sale ends {{ discount.end_date|date("M j") }}</p>
                        {% endif %}
                    </div>
                </a>
            {% endfor %}
            
        </div>
    </div>
</section>
{% endif %}
{# --- END: ACTIVE DISCOUNTS BANNER --- #}


<div class="px-6 pb-6 pt-20 flex flex-col items-center snap-start {% if active_discounts is empty %}pt-30{% endif %} bg-[#FFF8F2]">

  {# --- CATEGORY SECTION --- #}
  <section class="flex flex-col items-center justify-center pt-10 pb-10">
    <div class="w-fit items-center flex flex-col gap-y-3">

      {# --- 1. DYNAMIC HEADER (Always shows) --- #}
      <h1 class="font-zen-antique text-3xl lg:text-6xl text-[#A96B44] font-400 text-shadow-sm text-shadow-[#8c8989]">
        {{ selected_category.name | default('Explore Our Categories') }}
      </h1>

      {# --- 2. DYNAMIC BREADCRUMB OR DIVIDER (Always shows) --- #}
      {% if selected_category %}
        {# Show breadcrumb when a category is selected #}
        <div class="flex items-center gap-x-2 text-sm text-[#A69273] font-semibold">
          <a href="/products" class="hover:text-[#A96B44] hover:underline">All Categories</a>
          <span>/</span>
          <span class="text-[#A96B44]">{{ selected_category.name }}</span>
        </div>
      {% else %}
        {# Show original boba tea divider on main page #}
        <div class="flex items-center">
          <div class="flex flex-col gap-y-2 justify-center items-end mr-3">
            <div class="w-30 lg:w-60 bg-[#A69273] h-[0.1rem] rounded-full"></div>
            <div class="w-20 lg:w-45 bg-[#A69273] h-[0.1rem] rounded-full"></div>
          </div>
          <img src="/Assets/BobaTea.svg" alt="Boba Teas" class="w-15">
          <div class="flex flex-col gap-y-2 justify-center items-start ml-3">
            <div class="w-30 lg:w-60 bg-[#A69273] h-[0.1rem] rounded-full"></div>
            <div class="w-20 lg:w-45 bg-[#A69273] h-[0.1rem] rounded-full"></div>
          </div>
        </div>
      {% endif %}

      {# --- 3. CONSOLIDATED CATEGORY CARD GRID --- #}
      
      {# Determine which list of categories to show #}
      {% if selected_category %}
        {% set categories_to_display = selected_category.children %}
      {% else %}
        {# 'all_categories' from the controller is already the top-level #}
        {% set categories_to_display = all_categories %}
      {% endif %}

      {# Only render the grid container if there's something to show #}
      {% if categories_to_display is defined and categories_to_display|length > 0 %}
        <div class="min-h-90 w-full gap-6 flex flex-wrap justify-center items-center mt-8">
          
          {# Loop and display the cards #}
          {% for cat in categories_to_display %}
            {% set image_src = cat.image ? '/Assets/Categories/' ~ cat.image : '/Assets/Categories/' ~ cat.slug ~ '.png' %}
            
            <div class="relative w-40 h-60 lg:w-60 lg:h-90 rounded-4xl overflow-hidden border border-[#E8C7A5]
                         bg-white shadow-md hover:shadow-xl transition-transform transform hover:-translate-y-1 group">
              
              <a href="?category={{ cat.slug | url_encode }}" class="absolute inset-0 block">
                <img src="{{ image_src }}" alt="{{ cat.name }}"
                     class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
                     onerror="this.onerror=null; this.src='/Assets/placeholder-item.png';">
                <div class="absolute inset-0 bg-linear-to-t from-black/40 via-transparent to-transparent"></div>
              </a>

              <a href="?category={{ cat.slug | url_encode }}"
                 class="absolute bottom-4 left-1/2 -translate-x-1/2 w-32 lg:w-40 h-10 bg-[#A96B44] text-white font-zen-antique text-lg rounded-full overflow-hidden
                         shadow-md hover:shadow-xl transition-all duration-300 group/button flex items-center justify-center">
                
                <span class="absolute inset-0 bg-white opacity-25 scale-x-0 origin-left group-hover/button:scale-x-100 transition-transform duration-500 ease-in-out"></span>
                <span class="relative z-10">{{ cat.name }}</span>
              </a>
            </div>
          {% endfor %}

        </div>
      {% endif %}
      
    </div>
  </section>

  {# --- PRODUCT GRID --- #}
  <section class="mt-10 snap-start">
    <h1 class="text-3xl font-zen-antique text-[#A96B44] mb-6 text-center">Our Treats</h1>

    <!-- 
      FIX: 
      - Replaced 'md:grid-cols-4' with 'md:grid-cols-3 lg:grid-cols-4'
      - This makes cards larger on standard desktop screens (3 columns)
      - and only goes to 4 columns on very wide screens.
    -->
    <div id="products-grid" class="w-full max-w-8xl grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      
      {% if products is empty %}
        <p class="text-center text-gray-500 col-span-full">No products found.</p>
      {% else %}
        {% for product in products %}

        <!-- --- CARD START --- -->
        <!-- FIX: Added 'flex flex-col' to make the card a vertical flex container -->
        <a href="{{ app_url }}/products/{{ product.sku | default(product.id) }}"
           class="min-w-70 flex flex-col bg-white rounded-2xl shadow-md hover:shadow-xl transition-transform transform hover:-translate-y-1 border border-[#EADBCB] overflow-hidden">

          <!-- Image (no change) -->
          <div class="relative w-full h-48">
            <img src="{{ product.image }}" alt="{{ product.name }}"
                 class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 ease-in-out hover:scale-105"
                 onerror="this.onerror=null; this.src='/Assets/placeholder-item.png';">
          </div>

          <!-- Content Wrapper -->
          <!-- FIX: Added 'flex flex-col flex-grow' to make this section fill the remaining height -->
          <div class="p-4 flex flex-col grow">
            
            <!-- Main content (name, price, sizes) -->
            <div>
              <h2 class="font-semibold text-lg text-[#835234] truncate">{{ product.name }}</h2>
{# --- MODIFIED: Price Block --- #}
            <div class="mb-1">
                {% set base_price = product.price %}
                {% set base_original_price = product.original_price | default(product.price) %}
                {% set starts_at = (product.sizes is defined and product.sizes|length > 0) ? "Starts at " : "" %}

                {% if base_original_price > base_price %}
                    {# On Sale #}
                    <p class="font-bold text-red-600 text-lg">
                        {{ starts_at }}₱{{ base_price|number_format(2) }}
                    </p>
                    <p class="text-sm text-gray-500 line-through">
                        ₱{{ base_original_price|number_format(2) }}
                    </p>
                {% else %}
                    {# Not on Sale #}
                    <p class="font-bold text-[#A69273] text-lg">
                        {{ starts_at }}₱{{ base_price|number_format(2) }}
                    </p>
                {% endif %}
            </div>
            {# --- END: Price Block --- #}

              {% if product.sizes is defined and product.sizes|length > 0 %}
              <div class="flex flex-wrap gap-1 mb-2">
                {% for size in product.sizes %}
                <span class="px-2 py-0.5 text-xs bg-[#FFF3E0] text-[#A96B44] border border-[#EAD0B5] rounded-full font-medium">
                  {{ size.name }}
                </span>
                {% endfor %}
              </div>
              {% endif %}
            </div>
            
            <!-- Category Tag Wrapper -->
            <!-- FIX: Added 'mt-auto' to push this block to the bottom of the card -->
            <div class="mt-auto pt-2">
              <span class="inline-block px-3 py-1 text-xs bg-[#FDE7D6] text-[#A96B44] rounded-full">
                {{ product.category_name }}
              </span>
            </div>

          </div>
          <!-- End Content Wrapper -->

        </a>
        <!-- --- CARD END --- -->
        {% endfor %}
      {% endif %}
    </div>
  </section>

</div>
{% endblock %}